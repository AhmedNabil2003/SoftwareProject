<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="imges/logo.jpg" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
    />
    <title>Hotels List</title>
    <link rel="stylesheet" href="/css/Hotels.css" />
  </head>
  <body>
    <header>
      <img class="logo" src="imges/logoapp.jpg" alt="" />
      <nav class="navigation">
        <a href="/">Home</a>
        <a href="/hotel">Hotels</a>
        <a href="/user/login">Login</a>
      </nav>
    </header>
    <div class="container">
      <div class="im-head">
        <h1>Available Hotels List</h1>
      </div>
      <!-- How to make a loop using ejs -->


      <%let x=0%>
      <div id="hotels-list">
      <% findedhotels.forEach(function(item) { %>
          <div class="<%=(x%2==0)?'left':'right'%>-hotel">
            <img src="<%=item.imgPath%>" />
            <div class="hotel-info">
            <%x=x+1%>
              <h2><%=item.name%></h2>
              <p><%=item.location%></p>
              <p>Rating:<%=item.rating%></p>
              <p id="star"><% for (let i = 0; i < item.rating; i++) { %>
                <span>â˜…</span>
              <% } %></p>
              <a target="_blank" href="/reservation">Book Now</a>
            </div>
          </div>
      <% }); %>      
    </div>  



    <footer class="footer">
      <p class="footer-title">Greetings @<span>Ahmed Nabil</span></p>
      <div class="icons">
        <a href=""><i class="fa-brands fa-linkedin"></i></a>
        <a href=""><i class="fa-brands fa-facebook"></i></a>
        <a href=""><i class="fa-brands fa-youtube"></i></a>
        <a href=""><i class="fa-brands fa-square-instagram"></i></a>
      </div>
    </footer>
  </body>
</html>
