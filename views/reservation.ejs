    <h1>Hotel Reservation Form</h1>
    <br>
    <section class="container">
      <form id="reservationForm" action="/reservation"   method='POST' >
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%=decoded.name%>" required><br>
      
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" value="<%=decoded.email%>"  required><br>
        <label for="hotel-name">Hotel Name:</label>

        <input type="text" id="hotel-name" name="hotelName" required><br>
        <label for="checkIn">Check-in Date:</label>

        <input type="date" id="checkIn" name="checkInDate" required><br>
      
        <label for="checkOut">Check-out Date:</label>
        <input type="date" id="checkOut" name="checkOutDate" required><br>
      
        <label for="rooms">Number of Rooms:</label>
        <input type="number" id="rooms" name="rooms" min="1" required><br>
      
        <button type="submit">Submit Reservation</button>
      </form>
    </section>
